<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="killerapp.istanbul24"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name="killerapp.istanbul24.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="killerapp.istanbul24.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="killerapp.istanbul24.QuestionActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="killerapp.istanbul24.ResultActivity"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation" >
        </activity>
        <activity
            android:name="killerapp.istanbul24.RouteActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="killerapp.istanbul24.RangeActivity"
            android:label="@string/title_activity_range" >
        </activity>
    </application>

</manifest>