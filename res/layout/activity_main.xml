<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/eatButton"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:onClick="startQuestionActivity"
        android:text="Eat Something" />
    
        <Button
        android:id="@+id/attractionsButton"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:onClick="startQuestionActivity"
        android:text="Tourist Attractions" />
        
            <Button
        android:id="@+id/goButton"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:onClick="startQuestionActivity"
        android:text="Go Out" />


    <Button
        android:id="@+id/routeButton"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:onClick="routeDemo"
        android:text="Route Demo" />

    <Button
        android:id="@+id/shareButton"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:onClick="shareDemo"
        android:text="Share Demo" />

</LinearLayout>