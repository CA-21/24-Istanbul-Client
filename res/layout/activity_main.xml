<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/istanbul1"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:baselineAligned="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/greetingTextView"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:fontFamily="RobotoThin"
            android:textSize="40dp"
            android:text="Good"
            android:gravity="center" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/imageView"
        android:layout_weight=".04"
        android:scaleType="fitXY"
        android:src="@drawable/mainscreenbar" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".1">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="What do you want to do?"
            android:id="@+id/textView"
            android:textSize="25dp"
            android:textColor="#ffffffff"
            android:textStyle="bold|italic"
            android:background="#88000000"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".7"
        android:padding="20dp">

        <Button
            android:id="@+id/eatButton"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:background="@drawable/white_button"
            android:onClick="startQuestionActivity"
            android:text="@string/eat"
            android:textStyle="bold"
            android:alpha="1.0"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/attractionsButton"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:background="@drawable/white_button"
            android:onClick="startQuestionActivity"
            android:text="@string/attraction"
            android:textStyle="bold"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/goButton"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:background="@drawable/white_button"
            android:onClick="startQuestionActivity"
            android:text="@string/go"
            android:textStyle="bold"
            android:layout_margin="10dp" />
    </LinearLayout>


</LinearLayout>